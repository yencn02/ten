<div id="files" class="box">
  <h2><a class="visible" href="#" style="background: url(/images/switch_minus.gif) no-repeat scroll 97% 50% rgb(51, 51, 51);">Technical Files</a></h2>
  <div>
    <div id="fileList<%= id_suffix %>">
       <%= render :partial => "attached_files/file_list",
      :locals => {:files => files, :id_suffix => id_suffix, :readonly => false} %>
    </div>
    <div id="newFile<%= id_suffix %>" style="display: none" class="NewItemInlineForm">
      <fieldset>
      <div id="newFileError<%= id_suffix %>" style="display: none">&nbsp;</div>
      <%= form_tag "/attached_files/attach", :multipart => true, :target => "upload_frame",
      :id => "newFileForm#{id_suffix}" do %>
        <p><%= label_tag "attachedFile#{id_suffix}", "File" %>
        <%=file_field_tag "attachedFile#{id_suffix}[file]" %></p>
        <p><%= label_tag "fileNote#{id_suffix}", "Note" %><br/>
        <%= text_area_tag "fileNote#{id_suffix}", nil, :class => "flexibleTextArea", :rows => "5", :cols => "0" %></p>
        <p>
          <%= submit_tag "Create",
          :id => "fileSaveButton#{id_suffix}",
          :name => "fileSaveButton#{id_suffix}", :class => "register-button", :style=>"width: auto;" %>
          <input type="button" class="register-button" id="file-tech-cancel" value="Cancel" style="width: auto;"/>
        </p>
        <div><%= hidden_field_tag "rid#{id_suffix}", client_request_id %></div>
        <div><%= hidden_field_tag "tid#{id_suffix}", task_id %></div>
      <% end %>
      </fieldset>
      <iframe id="upload_frame<%= id_suffix %>" name="upload_frame" style="display: none"></iframe>
    </div>
  </div>
</div>
