<div class="grid_16">
  <% if @project %>
    <h1>Project: <%= @project.name %></h1>
  <% end %>
  <table border="0">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Priority</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      <% @client_requests.each do |client_request| %>
        <tr request_id="<%=client_request.id%>">
          <td><%= link_to client_request.title, client_request.show_client_request_path %><br/></td>
          <td><%=raw strip_format_font(client_request.description) %></td>
          <td><%=raw ClientRequest::priority_text_for(client_request.priority) %></td>
          <td><%=raw client_request.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @client_requests %>
</div>